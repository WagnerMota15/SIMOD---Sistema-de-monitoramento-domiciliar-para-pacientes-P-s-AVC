<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/simodpngsemfundo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Container principal -->
    <LinearLayout
        android:id="@+id/layoutCampos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço e Contatos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- CEP -->
        <EditText
            android:id="@+id/etCampoCep"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="CEP"
            android:inputType="number"
            android:background="@drawable/caixa_texto"
            android:padding="16dp"/>

        <!-- Logradouro -->
        <EditText
            android:id="@+id/etCampoLogradouro"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:hint="Logradouro"
            android:background="@drawable/caixa_texto"
            android:padding="16dp"/>

        <!-- Bairro -->
        <EditText
            android:id="@+id/etCampoBairro"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:hint="Bairro"
            android:background="@drawable/caixa_texto"
            android:padding="16dp"/>

        <!-- Cidade + UF + Número -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCampoCidade"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:hint="Cidade"
                android:background="@drawable/caixa_texto"
                android:padding="16dp"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etCampoUF"
                android:layout_width="64dp"
                android:layout_height="53dp"
                android:hint="UF"
                android:background="@drawable/caixa_texto"
                android:padding="16dp"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etCampoNumero"
                android:layout_width="72dp"
                android:layout_height="53dp"
                android:hint="Nº"
                android:inputType="number"
                android:background="@drawable/caixa_texto"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- Título contatos -->
        <TextView
            android:layout_marginTop="24dp"
            android:text="Contatos de Emergência"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- RecyclerView de contatos -->

    <!-- Botão adicionar contato -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContatos"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCampos" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddContato"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:text="ADICIONAR CONTATO"
        android:textColor="#005B96"
        app:cornerRadius="20dp"
        app:strokeColor="#005B96"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/rvContatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão finalizar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFinalizar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:text="FINALIZAR"
        android:textStyle="bold"
        android:textSize="22sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
