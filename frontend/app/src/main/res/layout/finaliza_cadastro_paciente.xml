<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/btnVoltar2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/simodpngsemfundo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Conteúdo com Scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/imageView8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalização de Cadastro"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- CEP -->
            <EditText
                android:id="@+id/etCampoCep"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="CEP"
                android:inputType="number"
                android:background="@drawable/caixa_texto"
                android:padding="16dp"/>

            <!-- Logradouro -->
            <EditText
                android:id="@+id/etCampoLogradouro"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="8dp"
                android:hint="Logradouro"
                android:inputType="text"
                android:background="@drawable/caixa_texto"
                android:padding="16dp"/>

            <!-- Cidade + UF + Número -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCampoCidade2"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:hint="Cidade"
                    android:background="@drawable/caixa_texto"
                    android:padding="16dp"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etCampoUF2"
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:hint="UF"
                    android:inputType="textCapCharacters"
                    android:background="@drawable/caixa_texto"
                    android:padding="16dp"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etCampoNumero"
                    android:layout_width="70dp"
                    android:layout_height="53dp"
                    android:hint="Nº"
                    android:inputType="number"
                    android:background="@drawable/caixa_texto"
                    android:padding="16dp"/>
            </LinearLayout>

            <!-- Contatos -->
            <TextView
                android:id="@+id/lblContatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Contatos de Emergência (Familiares):"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContatos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                tools:itemCount="3"
                tools:listitem="@layout/item_contato"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddContato"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="369dp"
                android:layout_height="61dp"
                android:layout_marginTop="8dp"
                android:text="ADICIONAR NOVO CONTATO"
                android:textColor="#005B96"
                app:cornerRadius="20dp"
                app:strokeColor="#005B96"
                app:strokeWidth="2dp" />

            <!-- Tipo AVC -->
            <TextView
                android:id="@+id/lblAvc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Selecione o Tipo de AVC:"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStrokeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Tipo de AVC"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actStrokeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:padding="14dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão Finalizar -->
            <Button
                android:id="@+id/btnFinalizar"
                android:layout_width="370dp"
                android:layout_height="69dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#FFFFFF"
                android:text="FINALIZAR CADASTRO"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
