<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <!-- Toolbar azul no topo -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarHome"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/home_accent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarHome"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SaudaÃ§Ã£o + avatar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txtHello"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OlÃ¡, JosÃ©!"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/home_text_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgAvatar"
                    android:layout_marginEnd="12dp"/>

                <!-- Avatar redondo -->
                <TextView
                    android:id="@+id/imgAvatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="ðŸ‘¤"
                    android:textSize="20sp"
                    android:textColor="@color/home_text_mid"
                    android:background="@color/home_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CHECKLIST -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checklist de Hoje"
                        android:textStyle="bold"
                        android:textColor="@color/home_text_mid"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/home_card_inner"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_24"
                            android:tint="@color/home_green"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/txtChecklistProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3 de 5 concluÃ­dos"
                            android:textColor="@color/home_text_mid"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtChecklistDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/home_accent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_expand_more_24"
                            android:tint="@color/home_text_mid"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LEMBRETES -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PrÃ³ximos Lembretes"
                            android:textStyle="bold"
                            android:textColor="@color/home_text_mid"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtRemindersMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+3"
                            android:textColor="@color/home_accent"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rowReminder1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/home_card_inner"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_add_circle_24"
                            android:tint="@color/home_accent"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/txtReminder1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+ Ã s 8:00   Tomar remÃ©dios"
                            android:textColor="@color/home_text_mid"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right_24"
                            android:tint="@color/home_text_mid"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Registrar sinais -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVitals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_add_circle_24"
                        android:tint="@color/home_accent"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Registrar Sinais Vitais"
                        android:textColor="@color/home_text_mid"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        android:tint="@color/home_text_mid"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ExercÃ­cios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_run_24"
                        android:tint="@color/home_green"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ver ExercÃ­cios"
                        android:textColor="@color/home_text_mid"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        android:tint="@color/home_text_mid"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- EmergÃªncia -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmergency"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="EmergÃªncia"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="14dp"
                android:backgroundTint="@color/home_red"
                app:icon="@drawable/ic_emergency_24"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                android:layout_marginBottom="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNav"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:background="@android:color/white"
    android:paddingTop="6dp"
    android:paddingBottom="0dp"
    android:clipToPadding="false"
    app:menu="@menu/menu_bottom_nav"
    app:labelVisibilityMode="labeled"
    app:itemIconSize="24dp"
    app:itemIconTint="@color/bottom_nav_item_color"
    app:itemTextColor="@color/bottom_nav_item_color"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
