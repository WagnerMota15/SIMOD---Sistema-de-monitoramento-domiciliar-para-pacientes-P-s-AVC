                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etSystolic"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/caixa_texto"
                            android:hint="120"
                            android:inputType="number"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textColor="@color/home_text_mid"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical"/>

                        <EditText
                            android:id="@+id/etDiastolic"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/caixa_texto"
                            android:hint="80"
                            android:inputType="number"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textColor="@color/home_text_mid"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etBpNote"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/caixa_texto"
                        android:hint="AnotaÃ§Ã£o opcional"
                        android:inputType="text"
                        android:padding="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FrequÃªncia CardÃ­aca -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FrequÃªncia CardÃ­aca"
                        android:textStyle="bold"
                        android:textColor="@color/home_text_mid"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/home_card_inner"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â¤"
                            android:textSize="18sp"
                            android:layout_marginEnd="10dp"/>

                        <EditText
                            android:id="@+id/etHeartRate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="75"
                            android:inputType="number"
                            android:textColor="@color/home_text_dark"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="bpm"
                            android:textColor="@color/home_text_mid"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SaturaÃ§Ã£o O2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SaturaÃ§Ã£o de Oâ‚‚"
                        android:textStyle="bold"
                        android:textColor="@color/home_text_mid"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/home_card_inner"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oâ‚‚"
                            android:textStyle="bold"
                            android:textColor="@color/home_accent"
                            android:layout_marginEnd="10dp"/>

                        <EditText
                            android:id="@+id/etSpo2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="96"
                            android:inputType="number"
                            android:textColor="@color/home_text_dark"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/home_text_mid"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Glicemia -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/home_card"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glicemia"
                        android:textStyle="bold"
                        android:textColor="@color/home_text_mid"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/home_card_inner"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ©¸"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"/>

                        <EditText
                            android:id="@+id/etGlucose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="110"
                            android:inputType="number"
                            android:textColor="@color/home_text_dark"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mg/dL"
                            android:textColor="@color/home_text_mid"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveVitals"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="SALVAR"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="14dp"
                android:backgroundTint="@color/home_accent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="@android:color/white"
        android:paddingTop="6dp"
        android:clipToPadding="false"
        app:menu="@menu/menu_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
